@model IndexViewModel

<nav id="navigationbar">
    <ul style="font-size: 18pt; color:#CCCCCC !important;">
        <li>
            <div style="position: relative; left: 5pt; font-weight: bold; top: 5pt;">Активен Бургас</div>
            <div style="position: relative; left: 35pt; top: -2.5pt;"><i>Направи първата крачка за по-добър град!</i></div>
        </li>
        <li style="float: right;"><a style="color:#CCCCCC !important; font-size: 16pt; line-height: 30pt;">Контакти</a></li>
        <li style="float: right;"><a style="color:#CCCCCC !important; font-size: 16pt; line-height: 30pt;">Вход</a></li>
        <li style="float: right;"><a style="color:#CCCCCC !important; font-size: 16pt; line-height: 30pt;">Регистрация</a></li>
    </ul>
</nav>
<div id="carousel" style="box-shadow: inset 0 0 rgba(0, 0, 0, 0.2)">
    @foreach (var sliderItem in Model.SliderItems)
    {
        <div>
            <img src="@sliderItem.ImagePath" style="width: 100%; height: 400px; box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.2);" />
        </div>
    }
</div>
<div id="second_menu" style="width: 100%; display: flex; justify-content: space-around; background-color: #CCCCCC; font-size: 16pt; box-shadow: 0 1px 10px 0px rgba(0, 0, 0, 0.6)">
    <div style="margin: 10px;"><button href="Current" style="border: 0; background-color: transparent;">Някакви хубави инициативи</button></div>
    <div style="margin: 10px;"><button href="#" style="border: 0; background-color: transparent;">Още по хубави</button></div>
    <div style="margin: 10px;"><button href="Archive" style="border: 0; background-color: transparent;">Най хубавите инициативи</button></div>
</div>
<div id="Archive" class="second-content" style="display: none;">

</div>
<div id="Current" class="second-content" style="display: flex; flex-direction: row; flex-wrap: wrap;">
    @for (var i = 0; i < Model.TopInitiatives.Length; i++)
    {
        <div style="margin-top: @(i < 3 ? "50px" : "35px"); margin-left: 20px; margin-right: 20px;">
            <div>
                <div class="content-box" style="width: 380px; height: 360px; box-shadow: 0px 0px 40px 0px rgba(48,48,48,0.2)">
                    <div style="width: 100%; height: 100%; background-image: url('@Model.TopInitiatives[i].ImagePath'); background-size: cover;" >
                    </div>
                    <div style="position: relative; width: 100%; height: 100%; top: -100%;">
                        <div style="display: block; position: relative; top: 50%; transform: translateY(-50%); width: 100%;">
                            <div style="margin-left: 50%; transform: translateX(-50%); color: white; text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.5)">@Model.TopInitiatives[i].Title</div>
                            <button style="margin-left: 50%; transform: translateX(-50%); background-color: #CCCCCC; border: 0; width: 190px; margin-top: 15px;">Включи се</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>