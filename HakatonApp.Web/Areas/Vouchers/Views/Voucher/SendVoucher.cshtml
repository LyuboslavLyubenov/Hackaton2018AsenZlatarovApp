@model EmailFormModel
@{
    ViewData["Title"] = "SendVoucher";
}

<div class="container">
    <form asp-area="Vouchers" asp-controller="Voucher" asp-action="SendVoucher" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email">Име</label>
            <input asp-for="Email" class="form-control">
        </div>
        <button type="submit" class="btn btn-default">Изпрати</button>
    </form>
</div>

