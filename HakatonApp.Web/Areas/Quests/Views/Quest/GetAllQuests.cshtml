@model IEnumerable<QuestServiceModel>
@{
    ViewData["Title"] = "All";
}


@foreach (var quest in Model)
{


    <div class="col-lg-3 col-md-5 mb-4">
        <div class="card h-100">
            @{
                if (quest.Image != null)
                {
                    var base64 = Convert.ToBase64String(quest.Image);
                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    <a href="#"><img class="card-img-top" style="height: 250px;" src="@imgSrc" alt=""></a>
                }
            }
            <div class="card-body">
                <h4 class="card-title">
                    <a href="#">@quest.Name</a>
                </h4>
                <p class="card-text text-nowrap">@Html.Raw(quest.Description)</p>
                <div class="py-3">
                    @{ var data = new Dictionary<string, string>() { { "id", quest.Id.ToString() } }; }
                    <a asp-area="Quests" asp-controller="Quest" asp-action="GetById" asp-all-route-data="data" class="btn btn-success float-right">Още</a>
                </div>
            </div>
        </div>
    </div>
}

