@model ApproveQuestFormModel
@{
    ViewData["Title"] = "ApproveQuest";
}

<div class="container">
    <form asp-area="Quests" enctype="multipart/form-data" asp-controller="Quest" asp-action="Add" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="NumOfParticipants">Необходими доброволци</label>
            <input asp-for="NumOfParticipants" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="PointsPerPerson">Точки за човек</label>
            <input id="description" asp-for="PointsPerPerson" class="form-control">
        </div>
        <button type="submit" class="btn btn-default">Изпрати</button>
    </form>
</div>
